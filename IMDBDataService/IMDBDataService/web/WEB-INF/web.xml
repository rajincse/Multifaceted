<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>QueryServlet</servlet-name>
        <servlet-class>imdb.QueryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>QueryServlet</servlet-name>
        <url-pattern>/QueryServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <context-param>
        <param-name>db.mysql.host</param-name>
        <param-value>localhost</param-value>
    </context-param>
    <context-param>
        <param-name>db.mysql.port</param-name>
        <param-value>3306</param-value>
    </context-param>
    <context-param>
        <param-name>db.mysql.databasename</param-name>
        <param-value>imdb</param-value>
    </context-param>
    <context-param>
        <param-name>db.mysql.username</param-name>
        <param-value>root</param-value>
    </context-param>
     <context-param>
        <param-name>db.mysql.password</param-name>
        <param-value>rajin</param-value>
    </context-param>
</web-app>
