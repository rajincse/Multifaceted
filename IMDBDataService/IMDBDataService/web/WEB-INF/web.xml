<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    
    <servlet>
        <servlet-name>QueryServlet</servlet-name>
        <servlet-class>imdb.QueryServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DataServlet</servlet-name>
        <servlet-class>imdb.DataServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>QueryServlet</servlet-name>
        <url-pattern>/QueryServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DataServlet</servlet-name>
        <url-pattern>/DataServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <env-entry> 
            <env-entry-name>db.mysql.host</env-entry-name> 
            <env-entry-type>java.lang.String</env-entry-type> 
            <env-entry-value>localhost</env-entry-value>         
    </env-entry>
    <env-entry> 
            <env-entry-name>db.mysql.port</env-entry-name> 
            <env-entry-type>java.lang.String</env-entry-type> 
            <env-entry-value>3306</env-entry-value>        
    </env-entry>
    <env-entry> 
            <env-entry-name>db.mysql.databasename</env-entry-name> 
            <env-entry-type>java.lang.String</env-entry-type> 
            <env-entry-value>imdb</env-entry-value>         
    </env-entry>
    <env-entry> 
            <env-entry-name>db.mysql.username</env-entry-name> 
             <env-entry-type>java.lang.String</env-entry-type> 
            <env-entry-value>root</env-entry-value>        
    </env-entry>
    <env-entry> 
            <env-entry-name>db.mysql.password</env-entry-name> 
            <env-entry-type>java.lang.String</env-entry-type> 
            <env-entry-value>rajin</env-entry-value>        
    </env-entry>
    
    <env-entry> 
            <env-entry-name>db.mysql.query.limit</env-entry-name> 
            <env-entry-type>java.lang.String</env-entry-type> 
            <env-entry-value>10</env-entry-value>        
    </env-entry>
</web-app>
